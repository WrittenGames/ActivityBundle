
{% if currentUnit %}

    {% spaceless %}
    <div class="punchclock tracking">
        <span class="hours">{{ "now"|date( 'g' ) }}</span>
        :
        <span class="minutes">{{ "now"|date( 'i' ) }}</span>
        :
        <span class="seconds">{{ "now"|date( 's' ) }}</span>
    </div>
    {% endspaceless %}

{% else %}

<div class="cisco-activity">
    <i class="punchclock running"></i>
</div>

{% endif %}
