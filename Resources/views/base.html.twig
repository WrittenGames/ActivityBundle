<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}writtengames.com{% endblock %}</title>
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Orienta' rel='stylesheet' type='text/css' />
            <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap-combined.min.css" rel="stylesheet">
            <style type="text/css">
                div.page.container {
                    margin-top: 60px;
                }
                body * {
                    font-family: 'Orienta', sans-serif;
                }
                div.cisco-activity.project-list-item {
                    margin: 0.5em auto;
                }
                div.cisco-activity.project-list-item a {
                    text-decoration: none;
                }
            </style>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
    </head>
    <body>
        
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path( 'cisco_activity_dashboard' ) }}">ActivityBundle</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            {% set route = app.request.get('_route') %}
                            <li {% if route == 'cisco_activity_dashboard' %}class="active"{% endif %}>
                                <a href="{{ path( 'cisco_activity_dashboard' ) }}">
                                    <i class="icon-home icon-white"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li {% if route == 'cisco_activity_projects' %}class="active"{% endif %}>
                                <a href="{{ path( 'cisco_activity_projects' ) }}">
                                    <i class="icon-briefcase icon-white"></i>
                                    Projects
                                </a>
                            </li>
                            <li {% if route == 'cisco_activity_roadmap' %}class="active"{% endif %}>
                                <a href="{{ path( 'cisco_activity_roadmap' ) }}">
                                    <i class="icon-road icon-white"></i>
                                    Roadmap
                                </a>
                            </li>
                        </ul>
                    </div>
                    {% if is_granted( 'IS_AUTHENTICATED_FULLY' ) %}
                        Current user: {{ ciscoActivityCurrentUser.username }}
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="page container">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
            <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>
            <script src="https://raw.github.com/brandonaaron/jquery-mousewheel/master/jquery.mousewheel.js"></script>
            <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js"></script>
            <script src="{{ asset( 'bundles/ciscoactivity/js/activity.js' ) }}"></script>
        {% endblock %}
    </body>
</html>
